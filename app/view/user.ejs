<%- include('partials/header') %>

<div class="content">
  <p class="title">UTILISATEUR</p>
</div>

<!-- SELECT PERMETTANT DE CHOISIR UN USER DE LA BDD -->
<div class="select-container">
  <label for="choix" class="select-label">Choisir une option :</label>
  <select name="choix" id="choix" class="select">
    <option value="">-- Sélectionnez une option --</option>
    <% for(const user of usersList) { %>
    <option value=""><%= user.firstname %> <%= user.lastname %></option>
    <% } %>
  </select>
</div>

<!-- FORMULAIRE UNE FOIS LE SELECT SELECTIONNE -->
<form class="user-form" id="user-form">
  <div class="form-group">
    <label for="nom" class="form-label">Nom :</label>
    <input type="text" id="nom" name="nom" class="form-input" required>
  </div>
  <div class="form-group">
    <label for="prenom" class="form-label">Prénom :</label>
    <input type="text" id="prenom" name="prenom" class="form-input" required>
  </div>
  <div class="form-group">
    <label for="niveau" class="form-label">Niveau :</label>
    <input type="number" id="niveau" name="niveau" class="form-input" min="1" max="100" required>
  </div>
  <div class="form-group">
    <label for="wallet" class="form-label">Wallet :</label>
    <input type="text" id="wallet" name="wallet" class="form-input" required>
  </div>
  <div class="form-group">
    <label for="famille" class="form-label">Famille :</label>
    <select name="famille" id="famille" class="form-input" required>
      <option value="">-- Sélectionnez une famille --</option>
      <option value="famille1">Famille 1</option>
      <option value="famille2">Famille 2</option>
      <option value="famille3">Famille 3</option>
    </select>
  </div>
  <button type="submit" class="form-button">Envoyer</button>
</form>

<%- include('partials/footer') %>
